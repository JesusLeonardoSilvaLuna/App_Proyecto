{
    "version": 2,
    "builds": [
      {
        "src": "Api/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      { "src": "/Api/(.*)", "dest": "/Api/index.js" },
      { "src": "/(.*)", "dest": "/client/$1" }
    ]
  }